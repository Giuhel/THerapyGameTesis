<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helio.therapygame.actividades.Razonamiento4Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/idLayoutFondoL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/im"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="52dp"
                android:layout_marginLeft="52dp"
                android:src="@drawable/logo_mini2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Razonamiento 4"
                android:textColor="@color/colorBlanco"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coloca los números y resulve las multiplicaciones"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/colorNegro"/>

        <TextView
            android:id="@+id/intentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tequedan 3 Intentos"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorNegro"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/kiwi"/>

            <TextView
                android:id="@+id/kiwi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="=2"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/calabaza"/>

            <TextView
                android:id="@+id/calabaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="=3"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/platanos"/>

            <TextView
                android:id="@+id/platano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="=1"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/separadorId"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:textColor="@color/colorNegro"
            android:text="Multiplicación 1"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/calabaza"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/kiwi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado?"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/txtnum1mul1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="número"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/txtnum2mul1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="número"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/txtresultadomul1"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Resultado?"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/separadorId2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:textColor="@color/colorNegro"
            android:text="Multiplicación 2"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/kiwi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/platanos"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado?"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/txtnum1mul2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="numero"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/txtnum2mul2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="numero"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="30dp"/>


            <EditText
                android:id="@+id/txtresultadomul2"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Resultado?"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/separadorId3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:textColor="@color/colorNegro"
            android:text="Multiplicación 3"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/calabaza"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/platanos"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado?"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/txtnum1mul3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="numero"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/txtnum2mul3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="numero"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="30dp"/>


            <EditText
                android:id="@+id/txtresultadomul3"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Resultado?"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnverificaR4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Verificar"
            android:textColor="@color/colorBlanco"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@color/colorRojo"/>

    </LinearLayout>

</RelativeLayout>